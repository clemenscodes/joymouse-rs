{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "joymouse",
    "version": "0.1.0",
    "identifier": "clemenscodes.joymouse.gui",
    "build": {
        "beforeDevCommand": "moon run ui:dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "moon run ui:build",
        "frontendDist": "../../ui/dist/browser"
    },
    "app": {
        "windows": [
            {
                "title": "JoyMouse",
                "width": 800,
                "height": 600
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
